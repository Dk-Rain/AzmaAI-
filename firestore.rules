rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read and write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Workspaces are private to each user
    match /workspaces/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Transactions are admin-only
    match /transactions/{transactionId} {
      allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }

    // Settings are admin-only
    match /settings/global {
       allow read: if request.auth != null; // Allow all authenticated users to read settings
       allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }

    // Announcements can be read by anyone, but only written by admins
    match /announcements/{announcementId} {
      allow read: if true;
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }

    // Promo codes can be read by authenticated users, written by admins
    match /promoCodes/{promoId} {
      allow read: if request.auth != null;
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }

    // Export history is public for verification, but can only be created by authenticated users
    match /export/{exportId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if false; // Exports are immutable
    }
  }
}
