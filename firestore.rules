rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper: Check if the current user is an Admin
    function isGlobalAdmin() {
      return request.auth != null &&
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }

    // ========== USERS ==========
    match /users/{userId} {
      allow read, create, update: if request.auth.uid == userId || isGlobalAdmin();
      allow delete: if isGlobalAdmin();

      // Nested exports for user-specific history
      match /exports/{docId} {
        allow create: if request.auth.uid == userId;
        allow read: if request.auth.uid == userId || isGlobalAdmin();
      }
    }

    // ========== WORKSPACES ==========
    match /workspaces/{userId} {
      allow read, write: if request.auth.uid == userId || isGlobalAdmin();
    }

    // ========== TRANSACTIONS ==========
    match /transactions/{transactionId} {
      allow create: if request.auth != null && request.resource.data.userEmail == request.auth.token.email;
      allow read, update, delete: if isGlobalAdmin();
    }

    // ========== ANNOUNCEMENTS ==========
    match /announcements/{announcementId} {
      allow read: if true;
      allow write: if isGlobalAdmin();
    }

    // ========== PROMO CODES ==========
    match /promoCodes/{promoId} {
      allow read: if request.auth != null;
      allow create, delete: if isGlobalAdmin();
      allow update: if request.auth != null && (
        isGlobalAdmin() ||
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['usedCount', 'redeemedBy'])
      );
    }

    // ========== SETTINGS ==========
    match /settings/{settingId} {
      allow read: if true;
      allow create, update: if isGlobalAdmin();
      allow delete: if false;
    }

    // ========== EXPORTS (PUBLIC VERIFICATION) ==========
    match /exports/{docId} {
      // Anyone can verify (read)
      allow read: if true;

      // Any authenticated user can create an export record
      allow create: if request.auth != null;

      // Only admin can delete or modify export records
      allow update, delete: if isGlobalAdmin();
    }
  }
}
